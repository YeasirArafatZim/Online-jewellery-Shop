@model OnlineJwelaryShop.Models.sub_category
@{
    ViewBag.Title = "AddSubcategory";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row shadow1" style="padding-top:10px; padding-bottom:10px; #CCCCCC; margin-top:15px; padding-left:15px;">
    <strong style="font-size:20px;">Products Sub Category Manage</strong>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span>Control panel</span>
</div>
<div class="row" style="padding-bottom:30px;">
    <div class="col-md-2">
        &nbsp;
    </div>
    <div class="col-md-8">
        <div class="row" style="padding-top:20px;">
            @using (Html.BeginForm("AddSubcategory", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <label style="padding-top:20px;">Products Category Name</label>


                @Html.DropDownListFor(m => m.cat_id, new SelectList(ViewBag.Data, "cat_id", "name"), "--Select Category--", new { @class = "form-control" })
                <label style="padding-top:20px;">Sub Products Category Name</label>
                @Html.EditorFor(x => x.name, new { htmlAttributes = new { @class = "form-control", placeholder = "* Products Sub Category Name", required = "required" } })
                <div style="padding-top:10px;"></div>
                <button class="btn btn-info">Submit</button> <button class="btn btn-warning" type="reset">Reset</button>

            }
        </div>
    </div>
    <div class="col-md-2">
        &nbsp;
    </div>
</div>

@if (TempData["Message"] != null)
{
    <div class="row">
        <h4 style="color:crimson;text-align:center">@TempData["Message"]</h4>
    </div>
}

<div class="row" style="padding-top:5px; padding-bottom:5px; border-top:solid 1px #CCCCCC; border-bottom:solid 1px #CCCCCC; background-color:#F8F8F8;">
    <div class="col-md-1">
        <div class="row" style="padding-left:5px;">
            <strong>Sr. No</strong>
        </div>
    </div>
    <div class="col-md-4">
        <div class="row">
            <strong>Products Category Name</strong>
        </div>
    </div>
    <div class="col-md-5">
        <div class="row">
            <strong>Products Sub Category Name</strong>
        </div>
    </div>
    <div class="col-md-1">
        <div class="row">
            <strong>Delete</strong>
        </div>
    </div>
</div>
<div class="row" id="div_for_view" style="border-bottom:solid 1px #CCCCCC;">
    @{
        var count = 0;
        foreach (var item in ViewBag.SubWithCat)
        {
            count++;
            <div class="row" style="border-bottom:solid 1px #CCCCCC; padding-left:15px; padding-right:15px;">
                <div class="col-md-1">
                    <div class="row" style="padding-left:5px;">
                        @count
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="row">
                        @item.Category.name
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="row">
                        @item.Sub_Category.name
                    </div>
                </div>
                <div class="col-md-1">
                    <a href="@Url.Action("deleteSubCategory", "Admin", new {id = item.Sub_Category.sub_cat_id})"><img style="height:35px;width:35px;" src="~/Content/assets/img/delete.ico"></a>
                </div>
            </div>
        }
    }
</div>


