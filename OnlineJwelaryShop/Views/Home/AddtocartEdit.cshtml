@using OnlineJwelaryShop.Models
@{
    ViewBag.Title = "AddtocartEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Session["cart"] == null)
{
    <div style="padding-top:5%">

    </div>
    <div class="alert alert-danger" style="text-align:center;padding:5%">
        <h2>Cart is Empty!</h2>
    </div>
    <div style="padding-bottom:7%">

    </div>
}
else
{

    <table class="table table-bordered">
        <thead>
            <tr>
                <th><h4 style="text-align:center"> Product Name</h4></th>
                <th><h4 style="text-align:center"> Image </h4></th>
                <th><h4 style="text-align:center"> Quantity </h4></th>
                <th> <h4 style="text-align:center"> Add </h4></th>
            </tr>
        </thead>
        <tbody>
            @foreach (item item in (List<item>)Session["cart"])
            {
            <tr>
                <td style="text-align:center">@item.ProductCartTable.Rows[0][1]</td>
                <td style="text-align:center"><img src="@Url.Content(@item.ProductCartTable.Rows[0][3].ToString())" height=100 width=100 /></td>
                <td style="text-align:center">@item.Quantity</td>
                <td style="text-align:center">

                    <a href="../Home/AddToCartinc?id=@item.ProductCartTable.Rows[0][0]">

                        <i class="fa fa-plus"></i>
                    </a>

                    <a href="../Home/DecreaseQty?id=@item.ProductCartTable.Rows[0][0]">

                        <i class="fa fa-minus"></i>
                    </a>
                </td>
            </tr>
            }

        </tbody>
    </table>
    <div style="padding-left:45%;padding-top:3.5%;padding-bottom:5%">
        <a class="btn btn-success btn-lg" style="height:40px; width:180px;font-size:20px" href="../Home/AddtocartView ">Back to Cart</a>
    </div>



}

