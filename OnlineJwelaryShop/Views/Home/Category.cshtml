@using System.Data
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@foreach (var item in ViewBag.products)
{
    int m = @item.subproducttable.Rows.Count;
    <section id="new-products-area" class="p-9">
        <div class="ruby-container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <!-- Section Title Start -->
                    <div class="section-title">
                        <h2>@item.subcategoryname</h2>
                    </div>
                    <!-- Section Title End -->
                </div>
            </div>

           
            <div class="row">
                <div class="col-lg-12">
                    <div class="products-wrapper">
                        <div class="new-products-carousel owl-carousel">

                            <!-- Single Product Item -->
                            @for (int i = 0; i < m; i++)
                            {
                                <div class="single-product-item text-center">
                                    <figure class="product-thumb">                       
                                            <a href="@Url.Action("viewDetails", "Home", new {id = item.subproducttable.Rows[i][0]})"><img class="img-fluid" style="height:230px;" alt="Products" src="@Url.Content(@item.subproducttable.Rows[i][3])"></a>                                      
                                    </figure>

                                    <div class="product-details">
                                        <h2><a href="single-product.html">@item.subproducttable.Rows[i][1]</a></h2>

                                        <span class="price">@item.subproducttable.Rows[i][2]</span>
                                        <a href="@Url.Action("AddtoCart", "Home", new {id = item.subproducttable.Rows[i][0]})" class="btn btn-add-to-cart">+ Add to Cart</a>
                                    </div>
                                </div>
                            }
                            </div>
                    </div>
                </div>
            </div>           
        </div>
    </section>
}